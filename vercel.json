{
  "version": 2,
  "installCommand": "npm --prefix client ci --no-audit --no-fund && npm --prefix server ci --no-audit --no-fund",
  "buildCommand": "npm --prefix client run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

